<div class="container-navbar">

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "kard.svg" %>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
        <% unless devise_controller? || controller_name == 'pages' || controller_name == 'lists' && action_name == 'show'%>
            <div class="form-inline">

              <%= form_tag lists_path, method: :get do %>
                <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                  placeholder: "Find a list"
                %>
                <%= submit_tag "Search", class: "btn btn-primary" %>
              <% end %>
            </div>
      <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <% if user_signed_in? %>
            <% unless controller_name == 'lists' && action_name == 'index' %>
              <%= link_to "Lists", lists_path, class: 'black-nav-button'  %>
            <% end %>
          <% else %>
            <%= link_to "Sign Up", new_user_registration_path, class: 'black-nav-button' %>
          <% end %>
        </li>
        <li class="nav-item">
          <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'white-nav-button' %>
          <% else %>
            <%= link_to "Log In", new_user_session_path, class: 'white-nav-button'%>
          <% end %>
        </li>
        <li class="nav-item dropdown">
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
