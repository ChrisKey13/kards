
<div class="container-show mt-4">

  <div class="d-flex list-description-show flex-column align-items-star">
    <div class="d-flex edit-modules flex-row align-items-middle justify-content-between">
      <div class="d-flex flex-row justify-content-center">

      <h1 class= "list-title"> <%= @list.title %> </h1>
      <div class="d-flex flex-row justify-content-center align-items-center progression">
        <div class="progress">
          <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
          <div class="list-percentage">
            <%= @list.flashcards.count - @list.flashcards.where(status: 'Not Mastered Yet').count%>/<%= @list.flashcards.count%>
          </div>
      </div>
      </div>
      <div class="d-flex flex-row align-items-center justify-content-center">
        <div class="list-module d-flex flex-row justify-content-center align-items-center">
          <i class="material-icons list-icons">settings</i>

            <a class="nav-item dropdown utilities">Settings</a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="#">Action</a>
                <a class="dropdown-item" href="#">Another action</a>
              </div>
        </div>
        <div class="list-module practice-button d-flex flex-row justify-content-center align-items-center">
          <i class="material-icons list-icons">play_arrow</i>
          <p class="utilities">Practice</p>
        </div>
      </div>
    </div>
      <br>
      <p class = "">
        <%= @list.description %><br>
      </p>
      <%= @list.language.name %>

      <%= link_to 'Edit Your List', edit_list_path(@list) %>

      <%= link_to 'Destroy', list_path(@list), method: :delete, data: { confirm: 'Are you sure?' } %>

<hr>
        <% @list.flashcards.each do |flashcard| %>
        <div class="d-flex flex-wrap">
          <% if flashcard.photo.attached? %>
            <%= cl_image_tag flashcard.photo.key, height: 300, width: 400, crop: :fill, class: 'mt-4' %>
          <% else %>
            <p>No photo to displayed</p>
          <% end %><br>
          <%= flashcard.title %><br>
            <pre><code>
              Ruby Code Goes Here
            </code></pre>

          <div class="language-ruby highlighter-rouge">
            <div class="highlight github">
              <pre class="highlight github">
                <code>
              <%= flashcard.content %>

                </code>
              </pre>
            </div>
          </div>

          <%= flashcard.status %>
          <%= @list.language.name %><br>
          <%= link_to 'Edit', edit_flashcard_path(flashcard) %>
          <%= link_to "Delete", flashcard_path(flashcard), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
        </div>

  <%= link_to 'Go Back To Homepage', root_path %>
  <%= render "flashcards/new", list: @list, flashcard: @flashcard %>
</div>

  </div>
