
<div class="container-show mt-4">

  <div class="d-flex list-description-show flex-column align-items-star">
    <div class="d-flex edit-modules flex-row align-items-middle justify-content-between">
          <div class="d-flex flex-row justify-content-center">

            <h1 class= "list-title"> <%= @list.title %> </h1>
                  <div class="d-flex flex-row justify-content-center align-items-center progression">
                                  <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                  </div>
                                  <div class="list-percentage">
                                    <%= @list.flashcards.count - @list.flashcards.where(status: 'Not Mastered Yet').count%>/<%= @list.flashcards.count%>
                                  </div>
                  </div>
          </div>
      <div class="d-flex flex-row align-items-center justify-content-center">
                        <div class="list-module d-flex flex-row justify-content-center align-items-center">
                          <i class="material-icons list-icons">settings</i>

                            <a class="nav-item dropdown utilities">Settings</a>
                              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                              </div>
                        </div>
                        <div class="list-module practice-button d-flex flex-row justify-content-center align-items-center">
                          <i class="material-icons list-icons">play_arrow</i>
                          <p class="utilities">Practice</p>
                        </div>
      </div>
    </div>
      <p class = ""><%= @list.description %></p>
  </div>
          <div class="d-flex flex-row flex-wrap justify-content-center">
              <% @list.flashcards.each do |flashcard| %>
              <div class="flashcard d-flex flex-row justify-content-center">
                <div class="flashcard1 flash_front"><%= flashcard.question %></div>
              </div>
              <% end %>

          </div>

</div>

