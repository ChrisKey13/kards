<div class="container">
  Go Ahead and Create Your Own List of Flashcards

  <p>How Should We Call it ?</p>
  <%= render 'form' %>

  <%= link_to 'Back', root_path %>

</div>

<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel">Create a List of Flashcards</h4>
</div>
<div class="modal-body">
  <%= simple_form_for @list do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.association :language, input_html: { class: "beautiful-dropdown" }%>
    <%= f.input :photo, as: :file %>
</div>
<div class="modal-footer">
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
