  <div class="container">
    <div class="row signup">
    <div class="col-sm-6 d-flex flex-column left-signup align-items-center justify-content-center">
      <div class="container-signup">

        <h2 class="form-header">Welcome Back !</h2>
        <p class="form-description">Need a Kard Account ?</p>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: "e.g. john@doe.com",
                        input_html: { autocomplete: "email" },
                        class: 'form-labels'%>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" },
                        class: 'form-labels' %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: 'log-button' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>

    <div class="col-sm-6 d-flex justify-content-center align-items-center illustration-signup">
        <%= image_tag "signup.svg", class: "image-signup" %>
    </div>
  </div>
</div>
